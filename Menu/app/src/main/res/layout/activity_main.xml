<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.menu.MainActivity"
    android:orientation="vertical">


    <TextView
        android:id="@+id/id_mango_sorbet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="Mango Sorbet" />

    <TextView
        android:id="@+id/id_blueberry_pie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="Blueberry pie" />

    <TextView
        android:id="@+id/id_chocolate_lava_cake"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="Chocolate lava cake" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="printToLogs"
        android:text="PRINT MENU TO LOGS"/>


</LinearLayout>
